= form_for(@topic) do |f|
  - if @topic.errors.any?
    #error_explanation
      %h2
        = pluralize(@topic.errors.count, "error")
        prohibited this topic from being saved:
      %ul
        - @topic.errors.full_messages.each do |message|
          %li= message
  .field
    = f.label :title
    %br
      = f.text_field :title
  .field
    = f.label :body
    %br
      = f.text_area :body
  .field
    = f.label :tag_list
    %br
      = f.text_area :tag_list
  .actions
    = f.submit
